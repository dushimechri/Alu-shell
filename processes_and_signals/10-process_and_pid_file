#!/usr/bin/env bash
# This script creates a PID file, runs indefinitely, and handles specific signals.

# Create the PID file containing the process ID (PID)
echo $$ > /var/run/myscript.pid

# Function to handle cleanup when receiving SIGQUIT or SIGTERM signals
cleanup() {
  rm -f /var/run/myscript.pid
  exit 0
}

# Function to handle SIGTERM signal
handle_sigterm() {
  echo "I hate the kill command"
  cleanup
}

# Function to handle SIGINT signal (Ctrl+C)
handle_sigint() {
  echo "Y U no love me?!"
}

# Trap signals
trap 'handle_sigterm' SIGTERM
trap 'handle_sigint' SIGINT
trap 'cleanup' SIGQUIT

# Infinite loop printing message every second
while true; do
  echo "To infinity and beyond"
  sleep 1
done
